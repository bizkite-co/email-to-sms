{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist"
    },
    "include": [
        "bin/**/*.ts", // Include all .ts files in the bin directory
        "lib/**/*.ts", // Include all .ts files in the lib directory
        "lambda/email-processor/index.ts" // Keep the specific lambda entry for clarity, though lib/**/*.ts might cover it
    ]
}